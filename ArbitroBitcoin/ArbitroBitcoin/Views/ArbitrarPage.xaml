<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArbitroBitcoin.Views.ArbitrarPage" >
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightBlue">
            <Button x:Name="botaoImportarTransacao"
                    Text="ImportarTransação"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                    Clicked="OnButtonImportarTransacaoClicked"
                    Style="{StaticResource BotaoAcao}"/>
            <Button x:Name="botaoAssinar"
                    Text="AssinarTransação"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnButtonAssinarClicked" 
                    Style="{StaticResource BotaoAcao}"/>
            <Button x:Name="botaoModificarTransacao"
                    Text="ModificarTransação"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnButtonModificarClicked" 
                    Style="{StaticResource BotaoAcao}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>